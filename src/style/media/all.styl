.c-tirads-text
    mpd(0 0 15px)
    color #522583
    line-height 1.3

.c-modal-result
    max-width 1150px
    width 100%
    padding 20px 20px 5px
    background-color #D7D9E5
    background-repeat no-repeat
    background-position center
    background-size cover
    background-image url('../../img/modal-bg.jpg')
    border-radius 25px
    line-height 1.1
    font-weight 300

.c-result-body
    mpd(0 0 15px, 15px 15px 1px)
    background white
    border-radius 15px
    color #522583

.c-result-body ul > li
    margin-bottom 10px

.c-result-label
    mpd(0 0 15px)
    font-size 14px

.c-result-title
    mpd(0 0 15px)
    font-size 18px

.c-result-text
    mpd(0 0 15px)
    font-size 14px

.c-result-text sup
    font-size .7em

.c-result-info
    mpd(0 0 15px, 15px, flex)
    background-color #522583
    border-radius 15px
    color white
    font-size 11px

.c-result-info-icon
    display block
    margin-right 10px

.nowrap
    white-space nowrap
